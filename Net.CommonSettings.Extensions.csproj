	</ItemGroup>

	<PropertyGroup>
		<Authors>alexalok</Authors>
		<Description>.NET Common Settings helpers</Description>
		<Copyright>Copyright Â© alexalok 2021</Copyright>
		<Version>1.0.0</Version>
		<PackageReleaseNotes>
			* Initial public release
		</PackageReleaseNotes>
		<RepositoryUrl>https://github.com/alexalok/net-commonsettings-extensions</RepositoryUrl>
		<PackageTags>configuration, common, configuration helpers</PackageTags>
		<RepositoryType>git</RepositoryType>
		<PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
